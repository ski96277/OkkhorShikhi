<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.BanjonBorno_Activity"
        android:background="#CDDC39">

    <include
            layout="@layout/app_bar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:id="@+id/include7"/>

    <TextView
            android:id="@+id/banjonorno_text_show_TV_ID"
            android:gravity="center|bottom"
            android:textSize="170sp"
            android:text="ঁ"
            android:textColor="#000"
            android:fontFamily="@font/turagmj_bangla"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="137dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="138dp"
            android:layout_height="173dp"
            android:layout_width="245dp"
            app:layout_constraintHorizontal_bias="0.65"
            app:layout_constraintTop_toBottomOf="@+id/include7" android:layout_marginTop="5dp"/>
    <ImageView
            android:layout_width="477dp"
            android:layout_height="337dp"
            app:srcCompat="@drawable/home_page_bg"
            android:id="@+id/imageView_details_banjon_borno"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:scaleType="fitXY"
            app:layout_constraintHorizontal_bias="0.615" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/banjonorno_text_show_TV_ID"/>
    <TextView

            android:layout_width="358dp"
            android:layout_height="102dp"
            android:id="@+id/bangonorno_example_details_TV_ID"
            android:layout_marginEnd="176dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="177dp"
            android:textColor="#F30A0A"
            android:textSize="50sp"
            android:gravity="center"
            android:fontFamily="@font/turagmj_bangla"
            android:text="গাড়ি" app:layout_constraintHorizontal_bias="0.504" android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView_details_banjon_borno"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="241dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/linearLayout2">
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/banjon_borno_okkhor_recycler_ID"
                android:scrollbars="horizontal"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>