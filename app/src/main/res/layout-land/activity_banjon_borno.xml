<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.BanjonBorno_Activity"
        android:background="#CDDC39">

    <include
            layout="@layout/app_bar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:id="@+id/include12"/>

    <TextView
            android:id="@+id/banjonorno_text_show_TV_ID"
            android:gravity="center"
            android:textSize="70sp"
            android:text="ঁ"
            android:textColor="#000"
            android:fontFamily="@font/turagmj_bangla"
            android:layout_height="119dp"
            android:layout_width="109dp"
            app:layout_constraintStart_toEndOf="@+id/imageView_details_banjon_borno" android:layout_marginStart="3dp"
            android:layout_marginBottom="21dp" app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
            android:layout_marginTop="11dp" app:layout_constraintTop_toBottomOf="@+id/include12"/>
    <ImageView
            android:layout_width="200dp"
            android:layout_height="133dp"
            app:srcCompat="@drawable/home_page_bg"
            android:id="@+id/imageView_details_banjon_borno"
            android:scaleType="fitXY"
            android:layout_marginStart="6dp"
            app:layout_constraintStart_toEndOf="@+id/bangonorno_example_details_TV_ID"
            app:layout_constraintTop_toBottomOf="@+id/include12" android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
            app:layout_constraintEnd_toStartOf="@+id/banjonorno_text_show_TV_ID" android:layout_marginEnd="6dp"/>
    <TextView

            android:layout_width="136dp"
            android:layout_height="96dp"
            android:id="@+id/bangonorno_example_details_TV_ID"
            android:textColor="#F30A0A"
            android:textSize="30sp"
            android:gravity="center"
            android:fontFamily="@font/turagmj_bangla"
            android:text="গাড়ি"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="5dp" android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@+id/include12"
            app:layout_constraintEnd_toStartOf="@+id/imageView_details_banjon_borno" android:layout_marginEnd="6dp"
            android:layout_marginBottom="21dp" app:layout_constraintBottom_toTopOf="@+id/linearLayout2"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/linearLayout2">
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/banjon_borno_okkhor_recycler_ID"
                android:scrollbars="horizontal"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>