<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.Arbi_Borno_Activity"
        android:background="#CDDC39">
    <include
            layout="@layout/app_bar"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content" android:layout_width="0dp" app:layout_constraintHorizontal_bias="0.0"
            android:id="@+id/include4"/>


    <LinearLayout
            android:id="@+id/recycler_layout_ID"
            android:orientation="vertical"
            android:layout_width="595dp"
            android:layout_height="127dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="2dp" app:layout_constraintTop_toBottomOf="@+id/include4"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="4dp">
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="127dp"
                android:id="@+id/arbi_okkhor_recycler_ID"
                android:scrollbars="horizontal"
                android:orientation="vertical"/>
    </LinearLayout>
    <TextView
            android:layout_width="319dp"
            android:layout_height="147dp"
            app:srcCompat="@drawable/home_page_bg"
            android:id="@+id/textview_details_arbi_borno"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="110dp"
            android:text="Ø¸"
            android:textColor="#F70606"
            android:gravity="center|top"
            android:layout_marginEnd="132dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="152dp"
            android:layout_marginTop="3dp" app:layout_constraintTop_toBottomOf="@+id/recycler_layout_ID"/>


</androidx.constraintlayout.widget.ConstraintLayout>