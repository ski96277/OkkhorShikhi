<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:elevation="10dp"
        app:cardElevation="10dp"
        android:orientation="vertical"
        android:layout_width="150dp"
        android:layout_gravity="center"
        android:layout_height="150dp"
        android:layout_margin="10dp">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"

            android:background="@drawable/bg_image"
            android:id="@+id/linearLayout_English_number_Item">

        <TextView
                android:text="100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="50sp"
                android:textColor="#F5D80719"
                android:fontFamily="@font/kelsonsansbg_old"
                android:id="@+id/textView_ID_English_number"/>
        <TextView
                android:text="100000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#000"
                android:fontFamily="@font/kelsonsansb_light"
                android:id="@+id/textView_ID_English_number_Speeling"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>