<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.Shorborno_Activity"
        android:background="#CDDC39">
    <include
            layout="@layout/app_bar"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content" android:layout_width="0dp" app:layout_constraintHorizontal_bias="0.0"
            android:id="@+id/include35"/>

    <TextView
            android:layout_width="137dp"
            android:layout_height="90dp"
            android:id="@+id/shorborno_view_TV_ID"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="#000"
            android:fontFamily="@font/turagmj_bangla"
            android:text="ই"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/include35" app:layout_constraintEnd_toEndOf="parent"
    />
    <ImageView
            android:layout_width="190dp"
            android:layout_height="143dp"
            app:srcCompat="@drawable/home_page_bg"
            android:id="@+id/imageView_details"
            android:scaleType="fitXY"
            app:layout_constraintTop_toBottomOf="@+id/include35"
            app:layout_constraintEnd_toStartOf="@+id/shorborno_view_TV_ID" android:layout_marginEnd="10dp"
    />
    <TextView
            android:layout_width="144dp"
            android:layout_height="54dp"
            android:id="@+id/shorborno_exampale_name_TV_ID"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#F30606"
            android:fontFamily="@font/turagmj_bangla"
            android:text="ঔ"
            android:layout_marginTop="39dp"
            app:layout_constraintTop_toBottomOf="@+id/include35" app:layout_constraintStart_toStartOf="parent"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="90dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/linearLayout">
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/shororno_okkhor_recycler_ID"
                android:scrollbars="horizontal"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>