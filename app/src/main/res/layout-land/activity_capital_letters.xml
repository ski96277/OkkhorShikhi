<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.CapitalLetters_Activity"

        android:background="#CDDC39">
    <include
            layout="@layout/app_bar"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content" android:layout_width="0dp" app:layout_constraintHorizontal_bias="0.0"
            android:id="@+id/include34"/>

    <TextView
            android:text="AA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/capital_text_show_TV_ID"
            android:fontFamily="@font/kelsonsansbg_old"
            android:textSize="46sp"
            android:layout_marginTop="29dp"
            app:layout_constraintTop_toBottomOf="@+id/include34" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="45dp"/>
    <ImageView
            android:layout_width="155dp"
            android:layout_height="132dp"
            app:srcCompat="@drawable/a_image"
            android:id="@+id/imageView_details_capital_letters"
            android:scaleType="fitXY"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/include34"
            app:layout_constraintEnd_toStartOf="@+id/capital_text_show_TV_ID" android:layout_marginEnd="64dp"/>

    <TextView
            android:text="TextView"
            android:layout_width="176dp"
            android:layout_height="44dp"
            android:id="@+id/capital_letter_image_nameTV_ID"
            android:textSize="30sp"

            android:textColor="#FA0303" android:layout_marginTop="38dp"
            app:layout_constraintTop_toBottomOf="@+id/include34" app:layout_constraintStart_toStartOf="parent"
            android:gravity="center"/>


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="89dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/linearLayout4">
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/capital_letters_recycler_ID"
                android:scrollbars="horizontal"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>