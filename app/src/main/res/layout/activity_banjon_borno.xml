<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.BanjonBorno_Activity"
        android:background="#CDDC39">



<TextView
            android:id="@+id/banjonorno_text_show_TV_ID"
            android:gravity="center"
            android:textSize="90sp"
            android:text="ABBC"
            android:textColor="#000"
            android:fontFamily="@font/nikosh"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="137dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="138dp"
            android:layout_marginBottom="27dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView_details"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    <ImageView
            android:layout_width="367dp"
            android:layout_height="236dp"
            app:srcCompat="@drawable/home_page_bg"
            android:id="@+id/imageView_details_banjon_borno"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="91dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="241dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintHorizontal_bias="0.692"/>
    <TextView
            android:text="A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bangonorno_example_details_TV_ID"
            android:layout_marginEnd="176dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="177dp"
            android:textColor="#910D0D"
            android:layout_marginBottom="54dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
            android:textSize="50sp"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="38dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView_details_banjon_borno"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:id="@+id/linearLayout2">
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/banjon_borno_okkhor_recycler_ID"
                android:scrollbars="horizontal"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>