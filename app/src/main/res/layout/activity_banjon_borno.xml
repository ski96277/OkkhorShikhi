<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.BanjonBorno_Activity"
        android:background="#CDDC39">

    <include
            layout="@layout/app_bar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            app:layout_constraintHorizontal_bias="0.0"
    />

    <TextView
            android:id="@+id/banjonorno_text_show_TV_ID"
            android:gravity="center|bottom"
            android:textSize="70sp"
            android:text="ঁ"
            android:textColor="#000"
            android:fontFamily="@font/turagmj_bangla"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="137dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="138dp"
            android:layout_height="90sp"
            android:layout_width="244dp"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintBottom_toTopOf="@+id/imageView_details_banjon_borno"
            android:layout_marginBottom="3dp"/>
    <ImageView
            android:layout_width="367dp"
            android:layout_height="186dp"
            app:srcCompat="@drawable/home_page_bg"
            android:id="@+id/imageView_details_banjon_borno"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:scaleType="fitXY"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/bangonorno_example_details_TV_ID"/>
    <TextView

            android:layout_width="206dp"
            android:layout_height="47dp"
            android:id="@+id/bangonorno_example_details_TV_ID"
            android:layout_marginEnd="176dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="177dp"
            android:textColor="#F30A0A"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
            android:textSize="30sp"
            android:gravity="center"
            android:fontFamily="@font/turagmj_bangla"
            android:text="গাড়ি"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:id="@+id/linearLayout2">
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/banjon_borno_okkhor_recycler_ID"
                android:scrollbars="horizontal"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>