<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.SmallLetters_Activity"
        android:background="#CDDC39">


    <TextView
            android:text="a"
            android:layout_width="138dp"
            android:layout_height="69dp"
            android:id="@+id/small_letter_text_view_ID"
            android:layout_marginEnd="177dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="176dp"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:paddingBottom="5dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="50sp"
            app:layout_constraintHorizontal_bias="0.488"/>
    <ImageView
            android:layout_width="286dp"
            android:layout_height="238dp"
            app:srcCompat="@drawable/a_image"
            android:id="@+id/imageView_details_small_letters"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="251dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/small_letter_text_view_ID"
            app:layout_constraintVertical_bias="0.969"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/small_letter_image_Details_TV_ID"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="176dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="177dp"
            android:textSize="36sp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView_details_small_letters"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="176dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:id="@+id/linearLayout3">
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/small_letters_recycler_ID"
                android:scrollbars="horizontal"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>