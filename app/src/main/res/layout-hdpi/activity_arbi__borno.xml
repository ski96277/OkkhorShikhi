<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.Arbi_Borno_Activity"
        android:background="#CDDC39">
    <include
            layout="@layout/app_bar"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content" android:layout_width="0dp" app:layout_constraintHorizontal_bias="0.0"
    />


    <TextView
            android:layout_width="0dp"
            android:layout_height="235dp"
            app:srcCompat="@drawable/home_page_bg"
            android:id="@+id/textview_details_arbi_borno"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:textSize="180dp"
            android:text="Ø¸"
            android:textColor="#F70606"
            android:gravity="center"
            android:layout_marginTop="91dp"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="fitXY"
    />
    <LinearLayout
            android:id="@+id/recycler_layout_ID"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="150dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    >
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/arbi_okkhor_recycler_ID"
                android:scrollbars="horizontal"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>