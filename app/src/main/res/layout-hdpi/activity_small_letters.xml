<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.SmallLetters_Activity"
        android:background="#CDDC39">
    <include
            layout="@layout/app_bar"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content" android:layout_width="0dp" app:layout_constraintHorizontal_bias="0.0"
    />

    <TextView
            android:text="a"
            android:layout_width="138dp"
            android:layout_height="59dp"
            android:id="@+id/small_letter_text_view_ID"
            android:layout_marginEnd="177dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="176dp"
            android:gravity="center_horizontal"
            android:paddingBottom="5dp"
            android:textSize="50sp"
            app:layout_constraintHorizontal_bias="0.526"
            android:textColor="#000904" android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:layout_width="253dp"
            android:layout_height="193dp"
            app:srcCompat="@drawable/a_image"
            android:id="@+id/imageView_details_small_letters"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:scaleType="fitXY"
            app:layout_constraintHorizontal_bias="0.509"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/small_letter_text_view_ID"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/small_letter_image_Details_TV_ID"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="176dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="177dp"
            android:textSize="30sp"
            android:textColor="#FA0606" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView_details_small_letters"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="136dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/linearLayout3">
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/small_letters_recycler_ID"
                android:scrollbars="horizontal"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>