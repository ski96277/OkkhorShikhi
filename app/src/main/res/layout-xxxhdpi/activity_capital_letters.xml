<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.CapitalLetters_Activity"

        android:background="#CDDC39">
    <include
            layout="@layout/app_bar"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content" android:layout_width="0dp" app:layout_constraintHorizontal_bias="0.0"
            android:id="@+id/include30"/>

    <TextView
            android:text="AA"
            android:layout_width="144dp"
            android:layout_height="62dp"
            android:id="@+id/capital_text_show_TV_ID"
            android:layout_marginEnd="177dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="176dp"
            android:fontFamily="@font/kelsonsansbg_old"
            android:textSize="46sp"
            app:layout_constraintHorizontal_bias="0.372"
            android:layout_marginTop="5dp" app:layout_constraintTop_toBottomOf="@+id/include30"
            android:gravity="center"/>
    <ImageView
            android:layout_width="422dp"
            android:layout_height="281dp"
            app:srcCompat="@drawable/a_image"
            android:id="@+id/imageView_details_capital_letters"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:scaleType="fitXY"
            android:layout_marginTop="7dp" app:layout_constraintTop_toBottomOf="@+id/capital_text_show_TV_ID"/>

    <TextView
            android:text="TextView"
            android:layout_width="312dp"
            android:layout_height="57dp"
            android:id="@+id/capital_letter_image_nameTV_ID"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="176dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="177dp"
            android:textSize="30sp"

            app:layout_constraintHorizontal_bias="0.515"
            android:textColor="#FA0303" android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView_details_capital_letters" android:gravity="center"/>


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:id="@+id/linearLayout4">
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/capital_letters_recycler_ID"
                android:scrollbars="horizontal"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>