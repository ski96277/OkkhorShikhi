<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.Shorborno_Activity"
        android:background="#CDDC39">
    <include
            layout="@layout/app_bar"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content" android:layout_width="0dp" app:layout_constraintHorizontal_bias="0.0"
            android:id="@+id/include15"/>

    <TextView
            android:layout_width="137dp"
            android:layout_height="90dp"
            android:id="@+id/shorborno_view_TV_ID"
            android:gravity="center"
            android:textSize="50sp"
            android:textColor="#000"
            android:fontFamily="@font/turagmj_bangla"
            android:text="ই"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/include15" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="33dp" android:layout_marginBottom="48dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"/>
    <ImageView
            android:layout_width="238dp"
            android:layout_height="158dp"
            app:srcCompat="@drawable/home_page_bg"
            android:id="@+id/imageView_details"
            android:scaleType="fitXY"
            app:layout_constraintTop_toBottomOf="@+id/include15" android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintStart_toEndOf="@+id/shorborno_exampale_name_TV_ID" android:layout_marginStart="13dp"
            app:layout_constraintEnd_toStartOf="@+id/shorborno_view_TV_ID" android:layout_marginEnd="29dp"/>
    <TextView
            android:layout_width="190dp"
            android:layout_height="43dp"
            android:id="@+id/shorborno_exampale_name_TV_ID"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="#F30606"
            android:fontFamily="@font/turagmj_bangla"
            android:text="ঔ"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/include15"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="640dp"
            android:layout_height="101dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:id="@+id/linearLayout">
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/shororno_okkhor_recycler_ID"
                android:scrollbars="horizontal"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>