<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.SmallLetters_Activity"
        android:background="#CDDC39">
    <include
            layout="@layout/app_bar"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content" android:layout_width="0dp" app:layout_constraintHorizontal_bias="0.0"
            android:id="@+id/include16"/>

    <TextView
            android:text="a"
            android:layout_width="138dp"
            android:layout_height="59dp"
            android:id="@+id/small_letter_text_view_ID"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:textSize="50sp"
            android:textColor="#000904" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/include16" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="41dp"/>
    <ImageView
            android:layout_width="213dp"
            android:layout_height="153dp"
            app:srcCompat="@drawable/a_image"
            android:id="@+id/imageView_details_small_letters"
            android:scaleType="fitXY"
            android:layout_marginStart="7dp"
            app:layout_constraintStart_toEndOf="@+id/small_letter_image_Details_TV_ID"
            app:layout_constraintEnd_toStartOf="@+id/small_letter_text_view_ID" android:layout_marginEnd="35dp"
            android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/include16"
    />
    <TextView
            android:text="TextView"
            android:layout_width="180dp"
            android:layout_height="54dp"
            android:id="@+id/small_letter_image_Details_TV_ID"
            android:textSize="30sp"
            android:textColor="#FA0606"
            android:gravity="center" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="5dp"
            android:layout_marginTop="48dp" app:layout_constraintTop_toBottomOf="@+id/include16"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="109dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/linearLayout3">
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/small_letters_recycler_ID"
                android:scrollbars="horizontal"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>