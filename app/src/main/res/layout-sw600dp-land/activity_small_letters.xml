<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.SmallLetters_Activity"
        android:background="#CDDC39">
    <include
            layout="@layout/app_bar"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content" android:layout_width="0dp" app:layout_constraintHorizontal_bias="0.0"
            android:id="@+id/include18"/>

    <TextView
            android:text="aasdfa"
            android:textSize="70sp"
            android:gravity="center"
            android:layout_width="300dp"
            android:layout_height="99dp"
            android:id="@+id/small_letter_text_view_ID"
            android:textColor="#000A09"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="112dp"
            app:layout_constraintTop_toBottomOf="@+id/include18"/>
    <ImageView
            android:layout_width="381dp"
            android:layout_height="299dp"
            app:srcCompat="@drawable/a_image"
            android:id="@+id/imageView_details_small_letters"
            android:scaleType="fitXY"
            app:layout_constraintTop_toBottomOf="@+id/include18" android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
            app:layout_constraintStart_toEndOf="@+id/small_letter_text_view_ID" android:layout_marginStart="15dp"
            app:layout_constraintEnd_toStartOf="@+id/small_letter_image_Details_TV_ID" android:layout_marginEnd="32dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="264dp"
            android:layout_height="118dp"
            android:id="@+id/small_letter_image_Details_TV_ID"
            android:textSize="50sp"
            android:textColor="#FA0606"
            android:gravity="center" android:layout_marginTop="90dp"
            app:layout_constraintTop_toBottomOf="@+id/include18" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="143dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:id="@+id/linearLayout3">
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/small_letters_recycler_ID"
                android:scrollbars="horizontal"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>