<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.Shorborno_Activity"
        android:background="#CDDC39">
    <include
            layout="@layout/app_bar"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content" android:layout_width="0dp" app:layout_constraintHorizontal_bias="0.0"
            android:id="@+id/include17"/>

    <TextView
            android:layout_width="366dp"
            android:layout_height="157dp"
            android:id="@+id/shorborno_view_TV_ID"
            android:gravity="center"
            android:textSize="70sp"
            android:textColor="#000"
            android:fontFamily="@font/turagmj_bangla"
            android:text="ই"
            android:layout_marginTop="118dp"
            app:layout_constraintTop_toBottomOf="@+id/include17" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <ImageView
            android:layout_width="456dp"
            android:layout_height="316dp"
            app:srcCompat="@drawable/home_page_bg"
            android:id="@+id/imageView_details"
            android:scaleType="fitXY"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/include17"
            app:layout_constraintStart_toEndOf="@+id/shorborno_view_TV_ID" android:layout_marginStart="15dp"
            app:layout_constraintEnd_toStartOf="@+id/shorborno_exampale_name_TV_ID" android:layout_marginEnd="7dp"/>
    <TextView
            android:layout_width="363dp"
            android:layout_height="184dp"
            android:id="@+id/shorborno_exampale_name_TV_ID"
            android:gravity="center"
            android:textSize="70sp"
            android:textColor="#F30606"
            android:fontFamily="@font/turagmj_bangla"
            android:text="ঔ"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginTop="118dp"
            app:layout_constraintTop_toBottomOf="@+id/include17"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="107dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/linearLayout">
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/shororno_okkhor_recycler_ID"
                android:scrollbars="horizontal"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>