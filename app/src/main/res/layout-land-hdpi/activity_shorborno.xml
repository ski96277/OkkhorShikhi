<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.Shorborno_Activity"
        android:background="#CDDC39">
    <include
            layout="@layout/app_bar"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content" android:layout_width="0dp" app:layout_constraintHorizontal_bias="0.0"

            android:visibility="gone" />

    <TextView
            android:layout_width="166dp"
            android:layout_height="84dp"
            android:id="@+id/shorborno_view_TV_ID"
            android:gravity="center"
            android:textSize="40sp"
            android:textColor="#000"
            android:fontFamily="@font/turagmj_bangla"
            android:text="ই"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="6dp" android:layout_marginTop="44dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView_details" android:layout_marginStart="27dp"
            app:layout_constraintHorizontal_bias="0.517"/>
    <ImageView
            android:layout_width="210dp"
            android:layout_height="167dp"
            app:srcCompat="@drawable/home_page_bg"
            android:id="@+id/imageView_details"
            android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="19dp" app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="1.0"
            android:layout_marginEnd="180dp"/>
    <TextView
            android:layout_width="167dp"
            android:layout_height="58dp"
            android:id="@+id/shorborno_exampale_name_TV_ID"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="#F30606"
            android:fontFamily="@font/turagmj_bangla"
            android:text="ঔ"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="1dp" android:layout_marginTop="60dp" app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="101dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/linearLayout">
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/shororno_okkhor_recycler_ID"
                android:scrollbars="horizontal"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>